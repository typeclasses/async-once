cabal-version: 3.0

name: lazy-async
version: 0

library
    default-language: Haskell2010
    ghc-options: -Wall
    hs-source-dirs: src
    default-extensions: ExistentialQuantification NoImplicitPrelude
    exposed-modules: LazyAsync
    other-modules: LazyAsync.LazyAsync LazyAsync.Conversions LazyAsync.Outcome LazyAsync.Polling LazyAsync.Spawning LazyAsync.Starting LazyAsync.Status LazyAsync.Waiting
    build-depends: async, base, exceptions, stm, unliftio-core
